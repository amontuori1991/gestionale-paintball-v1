@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrazione";
}

<style>

    body {
        background-color: #CED4B5;
    }

    .register-container {
        max-width: 500px;
        margin: 100px auto;
        padding: 2rem;
        background-color: rgba(255, 255, 255, 0.95);
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        z-index: 2;
        position: relative;
    }

    .register-logo {
        text-align: center;
        margin-bottom: 1.5rem;
    }

        .register-logo img {
            max-height: 80px;
        }

    h1 {
        text-align: center;
        color: #0d6efd;
        font-size: 1.8rem;
        margin-bottom: 1rem;
    }

    .form-label {
        font-weight: 500;
    }
</style>

<div class="register-container">
    <div class="register-logo">
        <img src="/img/logo.gif" alt="Logo Full Metal Paintball" />
    </div>

    <h1>Registrazione Nuovo Utente</h1>

    <form method="post">
        <div class="form-floating mb-3">
            <input asp-for="Input.FirstName" class="form-control" />
            <label asp-for="Input.FirstName">Nome</label>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Input.LastName" class="form-control" />
            <label asp-for="Input.LastName">Cognome</label>
        </div>
        <div class="mb-3">
            <label asp-for="Input.Email" class="form-label">Email</label>
            <input asp-for="Input.Email" class="form-control" placeholder="Inserisci la tua email" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Input.Password" class="form-label">Password</label>
            <input asp-for="Input.Password" class="form-control" placeholder="Crea una password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Input.ConfirmPassword" class="form-label">Conferma Password</label>
            <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Ripeti la password" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success w-100">Registrati</button>
    </form>

    <div class="mt-3 text-center">
        <a asp-page="./Login">Hai già un account? Accedi</a>
    </div>
</div>
