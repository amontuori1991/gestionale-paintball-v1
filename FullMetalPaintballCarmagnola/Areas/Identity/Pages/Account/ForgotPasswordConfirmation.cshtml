@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Conferma Reimpostazione Password"; /* Tradotto */
    // Variabili colore, se vuoi mantenerle in pagina per personalizzazione rapida
    var accentColor = "#00838f";
    var primaryBtnColor = "#0d6efd";
    // Assicurati che questa pagina usi il layout principale, come Login.cshtml
}

<style>
    /* Copiato da Login.cshtml (sezione body, login-wrapper, login-container, logo, h1) */
    body {
        background-color: #CED4B5 !important;
    }

    .login-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: calc(100vh - 120px);
        width: 100%;
        padding-top: 20px;
        padding-bottom: 20px;
        perspective: 1000px;
    }

    @@media (max-width: 768px) {
        .login-wrapper {
            min-height: calc(100vh - 100px);
            padding-top: 10px;
            padding-bottom: 10px;
        }
    }

    .login-container {
        max-width: 450px;
        width: 90%;
        padding: 2.5rem;
        background: rgba(255, 255, 255, 0.95);
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        border: none;
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        transform-style: preserve-3d;
    }

        .login-container:hover {
            transform: translateY(-3px) scale(1.005);
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.15);
        }

    .login-logo {
        text-align: center;
        margin-bottom: 1.5rem;
    }

        .login-logo img {
            max-height: 80px;
            filter: none;
            transition: none;
        }

            .login-logo img:hover {
                transform: none;
            }

    h1 {
        text-align: center;
        color: #0d6efd;
        font-size: 1.8rem;
        font-weight: 500;
        margin-bottom: 1rem;
        letter-spacing: normal;
    }

    p { /* Stile per i paragrafi di testo */
        text-align: center;
        font-size: 1.1rem;
        color: #4a5568;
        line-height: 1.5;
    }
</style>

<div class="login-wrapper">
    <div class="login-container">
        <div class="login-logo">
            <img src="https://i.imgur.com/K9Ugseg.gif'" alt="Logo Full Metal Paintball" />
        </div>

        <h1>@ViewData["Title"]</h1>
        <p>
            Per favore, controlla la tua email per reimpostare la password.
        </p>
    </div> 
</div>