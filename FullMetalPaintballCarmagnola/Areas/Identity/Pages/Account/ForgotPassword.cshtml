@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Password Dimenticata"; /* Tradotto */
    // Variabili colore, se vuoi mantenerle in pagina per personalizzazione rapida
    var accentColor = "#00838f"; 
    var primaryBtnColor = "#0d6efd"; 
    // Assicurati che questa pagina usi il layout principale, come Login.cshtml
}

<style>
    /* Copiato da Login.cshtml */
    body {
        background-color: #CED4B5 !important; 
    }

    .login-wrapper { /* Riusato lo stesso wrapper per centratura e padding */
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: calc(100vh - 120px); 
        width: 100%;
        padding-top: 20px; 
        padding-bottom: 20px; 
        perspective: 1000px; 
    }
    
    @@media (max-width: 768px) { /* Correzione di @@media */
        .login-wrapper {
            min-height: calc(100vh - 100px); 
            padding-top: 10px;
            padding-bottom: 10px;
        }
    }

    .login-container { /* Riusato lo stesso stile per il contenitore del form */
        max-width: 450px;
        width: 90%;
        padding: 2.5rem;
        background: rgba(255, 255, 255, 0.95);
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        border: none;
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        transform-style: preserve-3d;
    }

    .login-container:hover {
        transform: translateY(-3px) scale(1.005);
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.15);
    }

    .login-logo { /* Logo, riusato da Login.cshtml */
        text-align: center;
        margin-bottom: 1.5rem;
    }

        .login-logo img {
            max-height: 80px;
            filter: none;
            transition: none;
        }
        .login-logo img:hover {
            transform: none;
        }

    h1 { /* Titolo, riusato da Login.cshtml */
        text-align: center;
        color: #0d6efd;
        font-size: 1.8rem;
        font-weight: 500;
        margin-bottom: 1rem;
        letter-spacing: normal;
    }
    
    /* Stile per h2/sottotitolo */
    h2 {
        text-align: center;
        font-size: 1.2rem;
        color: #4a5568;
        margin-bottom: 1.5rem;
        font-weight: 400;
    }

    .form-label { /* Label del form */
        font-weight: 500;
        color: inherit;
        margin-bottom: 0.5rem;
        display: block;
    }

    .form-control { /* Input del form */
        width: 100%;
        padding: 0.5rem 0.75rem;
        border: 1px solid #ced4da;
        border-radius: 0.25rem;
        background-color: #fff;
        box-shadow: none;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

    .form-control:focus {
        border-color: #86b7fe;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        outline: none;
        background-color: #fff;
    }
    
    .form-control.is-invalid, .form-control:invalid {
        border-color: #dc3545;
        padding-right: calc(1.5em + 0.75rem);
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 12 12' width='12' height='12' fill='none' stroke='%23dc3545'%3e%3ccircle cx='6' cy='6' r='4.5'/%3e%3cpath stroke-linejoin='round' d='M5.8 3.6h.4L6 6.5z'/%3e%3ccircle cx='6' cy='8.2' r='.6' fill='%23dc3545' stroke='none'/%3e%3c/svg%3e");
        background-repeat: no-repeat;
        background-position: right calc(0.375em + 0.1875rem) center;
        background-size: calc(0.75em + 0.375rem) calc(0.75em + 0.375rem);
    }
    .form-control.is-invalid:focus {
        box-shadow: 0 0 0 0.25rem rgba(220, 53, 69, 0.25);
    }

    .btn-primary { /* Bottone Reset Password */
        background-color: @primaryBtnColor;
        border-color: @primaryBtnColor;
        font-weight: 400;
        padding: 0.375rem 0.75rem;
        border-radius: 0.25rem;
        box-shadow: none;
        transition: color .15s ease-in-out,background-color .15s ease-in-out,border-color .15s ease-in-out,box-shadow .15s ease-in-out;
        letter-spacing: normal;
        text-transform: none;
    }

    .btn-primary:hover {
        background-color: #0b5ed7;
        border-color: #0a58ca;
        transform: none;
        box-shadow: none;
    }

    .text-danger { /* Testo di errore */
        color: #dc3545 !important;
        font-size: 0.875em;
        margin-top: 0.25rem;
    }

    .validation-summary-errors { /* Stile per summary errori */
        color: #dc3545;
        background-color: #f8d7da;
        border: 1px solid #f5c2c7;
        padding: 10px;
        border-radius: 0.25rem;
        margin-bottom: 1.5rem;
        font-size: 0.875rem;
    }
    .validation-summary-errors ul {
        list-style: none;
        padding-left: 0;
        margin-bottom: 0;
    }
</style>

<div class="login-wrapper">
    <div class="login-container">
        <div class="login-logo">
            <img src="https://i.imgur.com/K9Ugseg.gif'" alt="Logo Full Metal Paintball" />
        </div>

        <h1>@ViewData["Title"]</h1>
        <h2>Inserisci la tua email per reimpostare la password.</h2>
        <hr />

        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    @if (!ViewData.ModelState.IsValid) 
                    {
                        <div asp-validation-summary="ModelOnly" class="text-danger validation-summary-errors" role="alert"></div>
                    }
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="nome@esempio.com" />
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <button type="submit" class="w-100 btn btn-lg btn-primary">Reimposta Password</button> 
                </form>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}