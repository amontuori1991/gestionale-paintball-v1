@{
    Layout = null; // puoi metterlo a null o usare un layout se vuoi
}

<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="utf-8" />
    <title>Accesso Negato</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light d-flex align-items-center justify-content-center" style="height:100vh;">

    <div class="modal show" tabindex="-1" style="display: block; background: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-danger shadow-lg">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Accesso Negato</h5>
                </div>
                <div class="modal-body">
                    <p class="fs-5">Non possiedi i diritti per accedere a questa sezione.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" id="btnBack" class="btn btn-danger">Torna indietro</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('btnBack').addEventListener('click', function () {
            window.history.back();
        });
    </script>

</body>
</html>
