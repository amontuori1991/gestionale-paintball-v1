@model Full_Metal_Paintball_Carmagnola.Models.TesseratiPerPartitaViewModel

@{
    ViewData["Title"] = "Tesserati della Partita";
    var partitaId = ViewBag.PartitaId;
}

<style>
    body {
        background-color: #CED4B5;
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
        height: 100%;
        overflow-x: hidden;
    }

    .background-logo {
        position: fixed;
        top: 100px;
        left: 50%;
        transform: translateX(-50%);
        width: 250px;
        height: 250px;
        background: url('https://i.imgur.com/K9Ugseg.gif') no-repeat top center;
        background-size: contain;
        opacity: 1;
        z-index: 1;
        pointer-events: none;
    }

    .container-list {
        position: relative;
        z-index: 2;
        padding-top: 300px;
        padding-bottom: 20px;
        min-height: 100vh;
        max-width: 90%;
        margin: 0 auto;
    }

    .list-container {
        background-color: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding-top: 30px;
        overflow-x: auto;
    }

        .list-container h2 {
            font-size: 2rem;
            color: #0d6efd;
            text-align: center;
            margin-bottom: 30px;
        }

    .partite-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .partite-table th,
        .partite-table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        .partite-table th {
            background-color: #f2f2f2;
            font-weight: bold;
            color: #333;
        }

        .partite-table tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .partite-table tbody tr:hover {
            background-color: #e9e9e9;
        }
</style>

<div class="background-logo"></div>

<div class="container-list list-container">
    <h2 class="mb-4">Tesserati per la partita del giorno @Model.DataPartita.ToString("dd/MM/yyyy") alle ore @Model.OraPartita</h2>

    <p>
        <a class="btn btn-secondary" href="@Url.Action("Index", "Partite")">🔙 Torna alle Partite</a>
    </p>

    @if (!Model.Tesserati.Any())
    {
        <div class="alert alert-info">
            Nessun tesserato registrato per questa partita.
        </div>
    }
    else
    {
        <table class="partite-table">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Cognome</th>
                    <th>Azioni</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var t in Model.Tesserati)
                {
                    <tr>
                        <td>@t.Nome</td>
                        <td>@t.Cognome</td>
                        <td>
                            <form asp-action="RimuoviTesserato" asp-controller="Partite" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@t.Id" />
                                <input type="hidden" name="partitaId" value="@partitaId" />
                                <button type="button" class="btn btn-sm btn-danger" onclick="apriConfermaEliminazione('@t.Nome', '@t.Cognome', this.closest('form'))">❌ Rimuovi</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<!-- Modale Bootstrap -->
<div class="modal fade" id="confermaEliminazioneModal" tabindex="-1" aria-labelledby="confermaEliminazioneLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="confermaEliminazioneLabel">Conferma Eliminazione</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Chiudi"></button>
            </div>
            <div class="modal-body">
                <p id="testoConferma">Sei sicuro di voler eliminare il tesserato?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                <button type="button" class="btn btn-danger" id="btnConfermaElimina">Elimina</button>
            </div>
        </div>
    </div>
</div>

<script>
    let formDaInviare = null;

    function apriConfermaEliminazione(nome, cognome, form) {
        formDaInviare = form;
        document.getElementById('testoConferma').innerText = `Vuoi davvero eliminare il tesserato ${nome} ${cognome} dal database? Questa operazione è definitiva.`;
        const modal = new bootstrap.Modal(document.getElementById('confermaEliminazioneModal'));
        modal.show();
    }

    document.getElementById('btnConfermaElimina').addEventListener('click', function () {
        if (formDaInviare) formDaInviare.submit();
    });
</script>
