@model List<Full_Metal_Paintball_Carmagnola.Models.Partita>

@{
    ViewData["Title"] = "Gestione Caparre";
}
<link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<style>
    body {
        background-color: #CED4B5;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        overflow-x: hidden;
    }

    .background-logo {
        position: fixed;
        top: 100px;
        left: 50%;
        transform: translateX(-50%);
        width: 250px;
        height: 250px;
        background: url('https://i.imgur.com/K9Ugseg.gif') no-repeat top center; background-size: contain;
        opacity: 1;
        z-index: 1;
        pointer-events: none;
    }

    .container-list {
        position: relative;
        z-index: 2;
        padding-top: 300px;
        padding-bottom: 40px;
        min-height: 100vh;
        max-width: 100%;
        min-width: 1200px;
        margin: 0 auto;
    }

    .list-container {
        background-color: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        overflow-x: auto;
    }

    h2 {
        font-size: 2rem;
        color: #0d6efd;
        margin-bottom: 20px;
    }

    .table {
        background-color: white;
    }

        .table th, .table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        .table th {
            background-color: #f2f2f2;
            font-weight: bold;
            color: #333;
        }

        .table tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .table tbody tr:hover {
            background-color: #e9e9e9;
        }
</style>

<div class="background-logo"></div>

<div class="container-list">
    <div class="list-container">
        <h2>📄 Riepilogo Caparre</h2>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Stato</th>
                    <th>Giorno</th>
                    <th>Data</th>
                    <th>Riferimento</th>
                    <th>Importo Caparra</th>
                    <th>Metodo di Pagamento</th>
                    <th>Ricevuta</th>
                    <th>Annotazioni</th>
                    <th>Rimborso</th>
                    <th>Azioni</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var partita in Model)
                {
                    if (partita.Caparra > 0)
                    {
                        <tr>
                            <td>
                                @if (partita.IsDeleted)
                                {
                                    <span style="color: red; font-weight: bold;">Cancellata</span>
                                }
                                else
                                {
                                    <span>Attiva</span>
                                }
                            </td>
                            <td>@partita.Data.ToString("dddd")</td>
                            <td>@partita.Data.ToString("dd/MM/yyyy")</td>
                            <td>@partita.Riferimento</td>
                            <td>
                                @($"{partita.Caparra:0.00}€")
                            </td>
                            <td>@(string.IsNullOrWhiteSpace(partita.MetodoPagamentoCaparra) ? "N/D" : partita.MetodoPagamentoCaparra)</td>
                            <td>@(partita.CaparraConfermata ? "SI" : "NO")</td>
                                            <td>
                    <input type="text" class="form-control" name="annotazioni" value="@partita.Annotazioni" data-partita-id="@partita.Id" />
                </td>

                <td>
                    <select class="form-select" name="rimborso" data-partita-id="@partita.Id">
                        <option value="">--</option>
                                    <option value="SI" selected="@(partita.Rimborso == "SI" ? "selected" : null)">SI</option>
                                    <option value="NO" selected="@(partita.Rimborso == "NO" ? "selected" : null)">NO</option>
                                                                                           </select>
                </td>

                            <td>
                                <button class="btn btn-danger btn-sm btn-cancella-caparra" data-id="@partita.Id">🗑️ Cancella</button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
            @section Scripts {
                <script>
                    $(document).ready(function() {
                        $('.btn-cancella-caparra').on('click', function() {
                            var partitaId = $(this).data('id');

                            Swal.fire({
                                title: 'Sei sicuro?',
                                text: "La caparra sarà rimossa definitivamente!",
                                icon: 'warning',
                                showCancelButton: true,
                                confirmButtonColor: '#d33',
                                cancelButtonColor: '#3085d6',
                                confirmButtonText: 'Sì, cancella!',
                                cancelButtonText: 'Annulla'
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    $.ajax({
                                        url: '@Url.Action("CancellaCaparra", "Partite")',
                                        type: 'POST',
                                        data: { id: partitaId },
                                        success: function(response) {
                                            if (response.success) {
                                                Swal.fire(
                                                    'Cancellata!',
                                                    'La caparra è stata eliminata.',
                                                    'success'
                                                ).then(() => {
                                                    location.reload(); // ricarica pagina per aggiornare
                                                });
                                            } else {
                                                Swal.fire(
                                                    'Errore',
                                                    response.message || 'Errore nella cancellazione.',
                                                    'error'
                                                );
                                            }
                                        },
                                        error: function() {
                                            Swal.fire(
                                                'Errore',
                                                'Errore nella cancellazione della caparra.',
                                                'error'
                                            );
                                        }
                                    });
                                }
                            });
                        });
                    });
                </script>
            }

        </table>
    </div>
</div>
