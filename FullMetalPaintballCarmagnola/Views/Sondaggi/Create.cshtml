@model Full_Metal_Paintball_Carmagnola.Models.Survey
@{
    ViewData["Title"] = "Nuovo sondaggio";
}
<div class="container py-3">
    <h2>Nuovo sondaggio</h2>
    <form asp-action="Create" method="post" class="mt-3">
        <div class="mb-3">
            <label class="form-label">Titolo</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Descrizione (opzionale)</label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label">Slug pubblico</label>
            <input asp-for="PublicSlug" class="form-control" />
            <div class="form-text">Usato nel link pubblico. Deve essere univoco.</div>
        </div>
        <div class="form-check mb-3">
            <input asp-for="IsActive" class="form-check-input" />
            <label class="form-check-label">Attivo</label>
        </div>
        <button class="btn btn-primary" type="submit">Crea e vai al builder</button>
        <a class="btn btn-outline-secondary" asp-action="Index">Annulla</a>
    </form>
</div>
