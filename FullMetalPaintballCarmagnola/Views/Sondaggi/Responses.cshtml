@model (Full_Metal_Paintball_Carmagnola.Models.Survey survey, System.Collections.Generic.List<Full_Metal_Paintball_Carmagnola.Models.SurveyResponse> responses)
@using Full_Metal_Paintball_Carmagnola.Models
@{
    ViewData["Title"] = "Risposte";
    var survey = Model.survey;
    var responses = Model.responses;
    var questions = (IEnumerable<SurveyQuestion>)ViewBag.Questions;
}

@{
    var optionMap = ViewBag.OptionMap as IDictionary<int, string> ?? new Dictionary<int, string>();
}

<div class="container py-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Risposte: @survey.Title</h2>
        <a class="btn btn-outline-dark" asp-action="ExportCsv" asp-route-id="@survey.Id">Export CSV</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Data invio</th>
                    @foreach (var q in questions)
                    {
                        <th>@q.Text</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var r in responses)
                {
                    <tr>
                        <td>@r.Id</td>
                        <td>@r.SubmittedAt.ToLocalTime()</td>
                        @foreach (var q in questions)
                        {
                            var answers = r.Answers.Where(a => a.QuestionId == q.Id).ToList();
                            <td>
                                @if (answers.Count == 0)
                                {
                                    <span class="text-muted">—</span>
                                }
                                else
                                {
                                    @string.Join(" | ", answers.Select(a =>
                                    a.OptionId.HasValue
                                    ? (optionMap.TryGetValue(a.OptionId.Value, out var txt) ? txt : $"Opt#{a.OptionId}")
                                    : a.AnswerText))
                                }
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <a class="btn btn-outline-secondary" asp-action="Index">Torna all'elenco</a>
</div>
