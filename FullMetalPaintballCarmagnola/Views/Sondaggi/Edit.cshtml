@model Full_Metal_Paintball_Carmagnola.Models.Survey
@using Full_Metal_Paintball_Carmagnola.Models
@{
    ViewData["Title"] = "Modifica sondaggio";
}
<div class="container py-3">
    <div class="d-flex justify-content-between align-items-center">
        <h2>Modifica: @Model.Title</h2>
        <div>
            <a class="btn btn-outline-info" asp-action="Qr" asp-route-id="@Model.Id">QR/Link</a>
            <a class="btn btn-outline-dark" asp-action="Responses" asp-route-id="@Model.Id">Risposte</a>
        </div>
    </div>

    <form asp-action="Edit" method="post" class="mt-3">
        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label">Titolo</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label class="form-label">Slug pubblico</label>
                <input asp-for="PublicSlug" class="form-control" />
            </div>
            <div class="col-12">
                <label class="form-label">Descrizione</label>
                <textarea asp-for="Description" class="form-control"></textarea>
            </div>
            <div class="col-12 form-check">
                <input asp-for="IsActive" class="form-check-input" />
                <label class="form-check-label">Attivo</label>
            </div>
        </div>
        <div class="mt-3">
            <button class="btn btn-primary" type="submit">Salva</button>
            <a class="btn btn-outline-secondary" asp-action="Index">Torna all'elenco</a>
        </div>
    </form>

    <hr class="my-4" />

    <h4>Domande</h4>
    <div class="card p-3 mb-3">
        <form asp-action="AddQuestion" method="post" class="row g-2">
            <input type="hidden" name="surveyId" value="@Model.Id" />
            <div class="col-md-6">
                <input name="text" class="form-control" placeholder="Testo domanda" required />
            </div>
            <div class="col-md-3">
                <select name="type" class="form-select">
                    <option value="@QuestionType.MultipleChoice">Risposta multipla</option>
                    <option value="@QuestionType.OpenText">Testo libero</option>
                </select>
            </div>
            <div class="col-md-2 form-check d-flex align-items-center">
                <input class="form-check-input" type="checkbox" name="allowMultiple" value="true" id="allowMultiple" />
                <label class="form-check-label ms-2" for="allowMultiple">Più risposte</label>
            </div>
            <div class="col-md-1">
                <button class="btn btn-success w-100" type="submit"><i class="bi bi-plus-lg"></i></button>
            </div>
        </form>
    </div>

    @foreach (var q in Model.Questions.OrderBy(q => q.Order))
    {
        <div class="card mb-3">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <h5 class="card-title mb-0">@q.Text</h5>
                    <form asp-action="RemoveQuestion" method="post">
                        <input type="hidden" name="id" value="@q.Id" />
                        <button class="btn btn-sm btn-outline-danger" type="submit"><i class="bi bi-trash"></i></button>
                    </form>
                </div>
                <div class="text-muted">
                    Tipo: @(q.Type == QuestionType.MultipleChoice ? "Risposta multipla" : "Testo libero")
                    @if (q.Type == QuestionType.MultipleChoice)
                    {
                        <span> • @((q.AllowMultiple ? "Risposte multiple" : "Una sola risposta"))</span>
                    }
                </div>

                @if (q.Type == QuestionType.MultipleChoice)
                {
                    <div class="mt-3">
                        <h6>Opzioni</h6>
                        <ul class="list-group mb-2">
                            @foreach (var opt in q.Options.OrderBy(o => o.Order))
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>@opt.Text</span>
                                    <form asp-action="RemoveOption" method="post" class="m-0">
                                        <input type="hidden" name="id" value="@opt.Id" />
                                        <button class="btn btn-sm btn-outline-danger"><i class="bi bi-x"></i></button>
                                    </form>
                                </li>
                            }
                        </ul>
                        <form asp-action="AddOption" method="post" class="input-group">
                            <input type="hidden" name="questionId" value="@q.Id" />
                            <input name="text" class="form-control" placeholder="Nuova opzione" required />
                            <button class="btn btn-outline-success" type="submit">Aggiungi</button>
                        </form>
                    </div>
                }
            </div>
        </div>
    }
</div>
