@model Full_Metal_Paintball_Carmagnola.Models.Survey
@using Full_Metal_Paintball_Carmagnola.Models
@{
    ViewData["Title"] = "Modifica sondaggio";
}
<div class="container py-3">
    <div class="d-flex justify-content-between align-items-center">
        <h2>Modifica: @Model.Title</h2>
        <div>
            <a class="btn btn-outline-info" asp-action="Qr" asp-route-id="@Model.Id">QR/Link</a>
            <a class="btn btn-outline-dark" asp-action="Responses" asp-route-id="@Model.Id">Risposte</a>
        </div>
    </div>

    <form asp-action="Edit" method="post" class="mt-3">
        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label">Titolo</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label class="form-label">Slug pubblico</label>
                <input asp-for="PublicSlug" class="form-control" />
            </div>
            <div class="col-12">
                <label class="form-label">Descrizione</label>
                <textarea asp-for="Description" class="form-control"></textarea>
            </div>
            <div class="col-12 form-check">
                <input asp-for="IsActive" class="form-check-input" />
                <label class="form-check-label">Attivo</label>
            </div>
        </div>
        <div class="mt-3">
            <button class="btn btn-primary" type="submit">Salva</button>
            <a class="btn btn-outline-secondary" asp-action="Index">Torna all'elenco</a>
        </div>
    </form>

    <hr class="my-4" />

    <h4 class="text-center mb-3">Domande</h4>
    <div class="card p-3 mb-3">
        <form asp-action="AddQuestion" method="post" class="row g-3 align-items-end">
            <input type="hidden" name="surveyId" value="@Model.Id" />
            <div class="col-12 col-lg-6">
                <label class="form-label">Testo domanda</label>
                <input name="text" class="form-control" placeholder="Es. Ti interesserebbe un corso?" required />
            </div>
            <div class="col-6 col-lg-3">
                <label class="form-label">Tipo di risposta</label>
                <select name="type" class="form-select">
                    <option value="0">Risposta multipla</option>
                    <option value="1">Testo libero</option>
                </select>
            </div>
            <div class="col-6 col-lg-2">
                <label class="form-label d-block">Opzioni</label>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="allowMultiple" value="true" id="addAllowMultiple">
                    <label class="form-check-label" for="addAllowMultiple">Più risposte</label>
                </div>
            </div>
            <div class="col-12 col-lg-1">
                <label class="form-label d-none d-lg-block">&nbsp;</label>
                <button class="btn btn-success w-100" type="submit"><i class="bi bi-plus-lg"></i></button>
            </div>
        </form>
    </div>


    @foreach (var q in Model.Questions.OrderBy(q => q.Order))
    {
        <div class="card mb-3">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start flex-wrap gap-2">
                    <form asp-action="UpdateQuestion" method="post" class="d-flex flex-wrap align-items-end gap-2 flex-grow-1">
                        <input type="hidden" name="id" value="@q.Id" />
                        <div class="me-2" style="min-width:260px;flex:1 1 320px;">
                            <label class="form-label mb-1">Testo domanda</label>
                            <input name="text" class="form-control" value="@q.Text" required />
                        </div>
                        <div class="me-2" style="width:220px;">
                            <label class="form-label mb-1">Tipo</label>
                            <select name="type" class="form-select">
                                <option value="0" selected="@(q.Type == QuestionType.MultipleChoice)">Risposta multipla</option>
                                <option value="1" selected="@(q.Type == QuestionType.OpenText)">Testo libero</option>
                            </select>
                        </div>
                        <div class="form-check ms-1" style="padding-top:28px;">
                            <input class="form-check-input" type="checkbox" name="allowMultiple" value="true" @(q.AllowMultiple ? "checked" : "") id="allow_@q.Id" />
                            <label class="form-check-label" for="allow_@q.Id">Più risposte</label>
                        </div>
                        <button class="btn btn-primary btn-sm ms-auto" type="submit">Salva</button>
                    </form>

                    <form asp-action="RemoveQuestion" method="post" class="m-0">
                        <input type="hidden" name="id" value="@q.Id" />
                        <button class="btn btn-outline-danger btn-sm" title="Elimina"><i class="bi bi-trash"></i></button>
                    </form>
                </div>

                <div class="text-muted mt-2">
                    Tipo: @(q.Type == QuestionType.MultipleChoice ? "Risposta multipla" : "Testo libero")
                    @if (q.Type == QuestionType.MultipleChoice)
                    {
                        <span> • @((q.AllowMultiple ? "Risposte multiple" : "Una sola risposta"))</span>
                    }
                </div>

                @if (q.Type == QuestionType.MultipleChoice)
                {
                    <div class="mt-3">
                        <h6>Opzioni</h6>
                        <ul class="list-group mb-2">
                            @foreach (var opt in q.Options.OrderBy(o => o.Order))
                            {
                                <li class="list-group-item d-flex align-items-center gap-2">
                                    <form asp-action="UpdateOption" method="post" class="d-flex gap-2 flex-grow-1">
                                        <input type="hidden" name="id" value="@opt.Id" />
                                        <input name="text" class="form-control" value="@opt.Text" />
                                        <button class="btn btn-primary btn-sm" type="submit">Salva</button>
                                    </form>
                                    <form asp-action="RemoveOption" method="post" class="m-0">
                                        <input type="hidden" name="id" value="@opt.Id" />
                                        <button class="btn btn-outline-danger btn-sm" title="Rimuovi"><i class="bi bi-x"></i></button>
                                    </form>
                                </li>
                            }
                        </ul>
                        <form asp-action="AddOption" method="post" class="input-group">
                            <input type="hidden" name="questionId" value="@q.Id" />
                            <input name="text" class="form-control" placeholder="Nuova opzione" required />
                            <button class="btn btn-outline-success" type="submit">Aggiungi</button>
                        </form>
                    </div>
                }
            </div>
        </div>
    }


</div>
