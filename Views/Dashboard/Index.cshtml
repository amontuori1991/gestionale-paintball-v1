@{
    ViewData["Title"] = "Dashboard";
}

<style>
    body {
        background-color: #CED4B5;
    }

    .dashboard-container {
        padding: 3rem;
        text-align: center;
    }

        .dashboard-container h1 {
            font-size: 2.5rem;
            color: #0d6efd;
            margin-bottom: 2rem;
        }

    .dashboard-btns a {
        margin: 10px;
        padding: 1rem 2rem;
        font-size: 1.1rem;
    }
</style>

<div class="dashboard-container">
        <h1>Benvenuto @ViewBag.FullName!</h1>
    <p class="lead">Seleziona una sezione per iniziare a gestire l'associazione.</p>

    <div class="dashboard-btns">
        <a class="btn btn-outline-primary" href="#">Tesserati</a>
        <a class="btn btn-outline-success" href="#">Prenotazioni</a>
        <a class="btn btn-outline-warning" href="#">Caparre</a>
        <a class="btn btn-outline-info" href="#">Presenze Staff</a>
    </div>
</div>
